## CREATE FUNCTION with if condition
def is_studio_price(bedroom_count, nightPrice):
  is_studio = 1 if bedroom_count == 0 else 0
  if is_studio ==1:
    nightPrice *= 0.10 # Example: decrease nightPrice by 90% if it is a studio
  return nightPrice
 
