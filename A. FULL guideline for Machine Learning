# If multiple items are separated by other characters, we can create a cleaning function and use it with apply
def split_amenities(amenities):
    amenity_list = amenities \
        .replace("\"", "")  \
        .replace("{", "")  \
        .replace("}", "")  \
        .lower().split(",")
    return amenity_list
    
